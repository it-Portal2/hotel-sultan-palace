rules_version = '2';

// Firebase Storage Security Rules
// Allow public read access (for images to be visible on website)
// Allow authenticated users (admins) to write/upload files
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Anyone can read images (for website visitors)
      allow read: if true;
      // Only authenticated users (admins) can upload/write
      allow write: if request.auth != null;
    }
  }
}

